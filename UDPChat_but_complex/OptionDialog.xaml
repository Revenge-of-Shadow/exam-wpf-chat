<Window x:Class="UDPChat_but_complex.OptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDPChat_but_complex"
        mc:Ignorable="d"
        Title="OptionDialog" Height="256" Width="256">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="2">
                <CheckBox x:Name="cbIps" Content="Show IP addresses"/>
            <CheckBox x:Name="cbTim" Content="Update images automatically" Checked="cbTim_Checked" Unchecked="cbTim_Checked"/>
                <StackPanel Orientation="Horizontal" Height="25">
                    <TextBox x:Name="tbTim" Text="5" Width="20" Margin="4"/>
                    <Label Content=" second(s) delay."/>
                </StackPanel>
        </StackPanel>
    </Grid>
</Window>
